<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp">
    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:elevation="7dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <EditText
                android:id="@+id/input1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="end|center_vertical"
                android:layout_gravity="center_horizontal|bottom"
                android:inputType="numberDecimal"
                android:text="0" />

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:elevation="7dp"
            android:layout_gravity="center_horizontal">

            <Spinner
                android:id="@+id/input1_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:elevation="7dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <EditText
                android:id="@+id/input2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="end|center_vertical"
                android:layout_gravity="center_horizontal|bottom"
                android:inputType="numberDecimal"
                android:text="0" />

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:elevation="7dp"
            android:layout_gravity="center_horizontal">

            <Spinner
                android:id="@+id/input2_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="10dp" >

        <!-->Button Length</!-->
        <android.support.v7.widget.CardView
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/lengthButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorPrimaryLight"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/length" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:text="@string/length_button"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"/>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <!-->Button Weight</!-->
        <android.support.v7.widget.CardView
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/weightButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:background="@color/pink"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/weight" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:text="@string/weight_button"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"/>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <!-->Button Currency</!-->
        <android.support.v7.widget.CardView
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/currencyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:background="@color/light_blue"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/currency" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:text="@string/currency_button"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>